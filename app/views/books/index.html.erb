<h1>All listed books</h1>

<%= link_to "Add a book", new_book_path if can? :create, Book %><br>

<div class="col-md-12">
  <table class="table table-striped">
    <thead>
    <tr>
      <th>Cover</th>
      <th>Title</th>
      <th>Author</th>
      <th>Year</th>
      <th>Genre</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.cover.url, size: "20x20", alt: "Book cover" %></td>
          <td><%= link_to book.title, book_path(book) %></td>
          <td><%= link_to book.author.name, author_path(book) %></td>
          <td><%= book.year %></td>
          <td><% book.genres.map do |genre| %>
              <%= link_to genre.tag, genre_path(genre) %>
              <% end %>
          </td>
          <td><%= book.user.email %></td>
          <!--<td><%= link_to "Show", book_path(book) %> </td>-->
          <td><%= link_to "Edit", edit_book_path(book) if can? :manage, book %></td>
          <td><%= link_to "Delete", book_path(book),
                          method: :delete, data: { Confirm: "Are you sure?"} if can? :destroy, book %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
</div>
