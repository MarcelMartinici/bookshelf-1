<h1>All listed books</h1>

<%= link_to "Add a book", new_book_path %><br>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Year</th>
    <th>description</th>
    <th colspan="2"></th>
  </tr>

  <% @books.each do |book| %>
    <tr>
      <td> <%= book.title %></td>
      <td> <%= book.author %></td>
      <td> <%= book.year %></td>
      <td> <%= book.description %></td>
      <td> <%= link_to "Show", book_path(book) %> </td>
      <td> <%= link_to "Edit", edit_book_path(book) %></td>
    </tr>
  <% end %>
</table>