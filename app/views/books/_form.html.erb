<%= form_for @book, :html => { :multipart => true } do |f| %>
    <% if @book.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@book.errors.count, "error") %>
            prohibited this book from being saved:</h2>
          <ul>
            <% @book.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= label_tag 'Author' %><br>
      <%= text_field_tag 'book[author_name]', @book.author.try(:name) %>
    </p>

    <p>
      <%= f.label :year %><br>
      <%= f.number_field :year %>
    </p>

    <p>
      <%= label_tag 'Genre' %><br>
      <%= text_field_tag 'book[genres]'%>
    </p>

    <p>
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </p>

    <p>
      <%= f.file_field :cover %>
    </p>

    <p>
      <%= @book.user.try(:email) %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>