<h1>All listed users</h1>

<%= link_to "Add a book", new_book_path if can? :create, Book %><br>

<div class="col-md-12">
  <table class="table table-striped">
    <thead>
    <tr>
      <th>Name</th>
      <th>Books</th>
      <th colspan="1"></th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.email, user_path(user) %></td>
          <td><% user.books.each do |book| %>
             <%= link_to book.title, book_path(book) %>;
             <% end %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
</div>
